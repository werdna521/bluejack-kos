<resources>

    <!-- Base application theme. -->
    <style name="Bluejack.Kos" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Bluejack.Kos.TextAppearance" parent="Bluejack.Kos">
        <item name="android:fontFamily">@font/sen_extra_bold</item>
    </style>

    <style name="Bluejack.Kos.Widget" parent="Bluejack.Kos">
    </style>

    <style name="Bluejack.Kos.TextAppearance.Title.White" parent="Bluejack.Kos.TextAppearance">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="Bluejack.Kos.TextApperance.Heading" parent="Bluejack.Kos.TextAppearance">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Bluejack.Kos.Widget.EditText" parent="Bluejack.Kos.Widget">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/sen_bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Bluejack.Kos.Widget.Button" parent="Bluejack.Kos.Widget">
        <item name="android:fontFamily">@font/sen_bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
